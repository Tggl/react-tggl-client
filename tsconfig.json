{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "allowJs": false,
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": "src",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "outDir": "lib",
    "downlevelIteration": true,
    "isolatedModules": true,
    "strict": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "lib",
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ],
  "include": [
    "src/**/*"
  ]
}
